<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/portada_item_recyclers"
    android:layout_gravity="center"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"

    android:id="@+id/card_item_pub_portada"
    android:layout_marginBottom="3dp"
    android:background="@android:color/transparent"
    >
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/cuadro_subcategoria"
        android:src="@drawable/img_laptop"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/tvTituloPub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:lines="1"
        android:textSize="@dimen/textorecycler"
        android:textColor="@color/blanco"
        />

    <TextView
        android:id="@+id/tvAutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" "
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/blanco"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar_item_pub"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:stepSize="0.1"
        style = "?android:attr/ratingBarStyleSmall"
        android:numStars = "5"
        android:rating   = "5"
        android:max="5"
        android:isIndicator="true"
        android:layout_marginTop="25dp"
        android:theme="@style/Rating"
        />




    <TextView
        android:id="@+id/tvPrecioPub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/azul"
        android:layout_toRightOf="@+id/ratingBar_item_pub"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/tvMonedaPub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CUC"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/azul"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="3dp"

        android:layout_toRightOf="@+id/tvPrecioPub"
        android:layout_alignParentBottom="true"
        android:textStyle="italic"
        />

</RelativeLayout>