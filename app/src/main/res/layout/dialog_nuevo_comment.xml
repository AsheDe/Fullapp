<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    >





            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
                android:src="@drawable/img_cerrar"
                android:layout_marginRight="16dp"
                android:id="@+id/cerrar"
                android:layout_marginTop="3dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:src="@drawable/img_guardar"
                android:layout_marginRight="52dp"
                android:layout_alignParentRight="true"
                android:id="@+id/guardar"
                android:layout_marginTop="3dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_gravity="left|center_vertical"
                android:text="OPINAR"
                android:layout_marginLeft="32dp"
                android:textSize="18sp"
                android:textColor="@color/colorPrincipalApp"
                android:id="@+id/tituloactividad"
                android:layout_marginTop="25dp"
                />





            <RatingBar
                android:id="@+id/rbCalificacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:max="5"
                android:numStars="5"
                android:rating="1"
                android:stepSize="0.1"
                android:isIndicator="false"
                android:layout_marginTop="50dp"
                android:theme="@style/Rating"
                android:layout_marginLeft="16dp"
                />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:hint="Comentario"
                android:layout_marginTop="115dp"
                android:id="@+id/ltOpinion"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="16dp"
                >

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/etOpinion"
                    />
            </android.support.design.widget.TextInputLayout>


<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Su comentario debe incluir una puntuaciÃ³n"
    android:textSize="12sp"
    android:layout_marginLeft="32dp"

    android:layout_marginTop="260dp"

    />



</RelativeLayout>