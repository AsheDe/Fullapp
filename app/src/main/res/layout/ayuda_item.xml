<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="25dp"

    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="5dp"
   app:cardBackgroundColor="@color/blanco"
    android:id="@+id/item_ayuda"
    android:elevation="3dp"
    android:layout_marginBottom="3dp"

    >
<RelativeLayout

	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/item_org">

    
	<TextView
 	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
	android:layout_marginLeft="5dp"
    	android:layout_marginRight="40dp"
    	android:layout_marginTop="5dp"
	android:layout_alignParentLeft="true"
	android:id="@+id/ayuda_descripcion"
	android:textSize="15sp"
	/>

	<ImageView
 	android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/img_ampliar"

    	android:layout_marginRight="3dp"
    	android:layout_marginTop="2dp"
	android:layout_alignParentRight="true"
		android:layout_alignParentTop="true"
	android:id="@+id/ayuda_expandir"

	/>


	<Button
		android:layout_marginRight="20dp"
		android:layout_marginLeft="20dp"
		android:id="@+id/ayuda_accion"
	android:layout_width="match_parent"
        android:layout_height="wrap_content"
  android:layout_below="@+id/ayuda_descripcion"
		android:text="accion"
		android:layout_marginTop="15dp"
		android:layout_marginBottom="5dp"
		android:background="@color/azul"
		android:textColor="@color/blanco"
		 />
</RelativeLayout>
</android.support.v7.widget.CardView>